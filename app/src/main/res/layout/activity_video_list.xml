<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.lx.sampleprocessor.activity.VideoListActivity"
    android:background="@color/white">
    <!--    头部标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blues">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/back_white"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="视频资料"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="clip_vertical"
            android:src="@mipmap/description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="功能说明:支持培训视频、操作视频的在线观看与学习；"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <GridView
        android:layout_marginTop="30dp"
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="6" />
</LinearLayout>
